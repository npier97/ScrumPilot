{
  "manifest_version": 3,
  "name": "Scrum Pilot - Room Creator",
  "description": "Quickly create a Scrum Pilot room from anywhere",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"],
  "permissions": ["scripting", "activeTab"]
}
